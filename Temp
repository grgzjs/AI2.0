<?php
// Connect to the database
$con = mysqli_connect("localhost", "root", "", "YAC");

// Get the current month and year
$month = date('m');
$year = date('Y');

// Execute the SQL query to count the quotes generated this month
$result = mysqli_query($con, "SELECT COUNT(*) as quote FROM invoices WHERE MONTH(date_created) = $month AND YEAR(date_created) = $year");

// Fetch the result as an associative array
$row = mysqli_fetch_assoc($result);

// Assign the number of quotes generated this month to $quotesthismonth
$quotesthismonth = $row['quote'];
?>


//API IG //

<?php
// Replace with your Instagram Business Account ID and Access Token
$accountId = '123456789';
$accessToken = 'your-access-token';

// API endpoint
$url = "https://graph.instagram.com/{$accountId}?fields=followers_count&access_token={$accessToken}";

// Make API request
$response = file_get_contents($url);

// Decode JSON response
$data = json_decode($response, true);

// Get followers count
$followersCount = $data['followers_count'];
?>

